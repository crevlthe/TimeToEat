<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.timetoeat">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".RecipeSearch"
            android:label="Recipe Search"
            android:parentActivityName=".MainActivity">
            <!--meta-data for to support v4.0 and lower-->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.timetoeat.MainActivity" />
        </activity>

        <activity
            android:name=".RecipeDetail"
            android:label="Recipe Details"
            android:parentActivityName=".RecipeSearch">
            <!--meta-data for to support v4.0 and lower-->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.timetoeat.RecipeSearch" />
        </activity>

    </application>

</manifest>